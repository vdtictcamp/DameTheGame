<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateOnlineGame"
    android:orientation="vertical"
    android:background="@color/damebraun">


    <TextView
        android:id="@+id/txtGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spiel erstellen" />

    <EditText
        android:id="@+id/nameOnlineGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/btnCreateOnlineGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spiel erstellen"
        android:background="@color/sandbraun"/>
</LinearLayout>