<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/damebraun"
    android:orientation="vertical"
    tools:context=".Activities.GameSettings">


    <TextView
        android:id="@+id/lblPlayerOne"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="@string/playerOneSettings"
        android:textColor="@color/sandbraun"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"></TextView>

    <EditText
        android:id="@+id/editTxtPlayerOneName"
        android:layout_width="346dp"
        android:layout_height="56dp"
        android:fontFamily="@font/reem_kufi"
        android:textColor="@color/sandbraun"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263"></EditText>

    <TextView
        android:id="@+id/lblPlayerTwo"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:text="@string/playerTwoSettings"
        android:textColor="@color/sandbraun"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464"></TextView>

    <TextView
        android:id="@+id/lblPlayerTwo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entscheide dich f端r einen Spielername"
        android:textColor="@color/sandbraun"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:text="Entscheide dich f端r einen Spielernamen"></TextView>

    <TextView
        android:id="@+id/lblPlayerTwo2"
        android:layout_width="363dp"
        android:layout_height="44dp"
        android:text="Entscheide dich f端r einen Spielername"
        android:textColor="@color/sandbraun"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558"
        tools:text="Entscheide dich f端r einen Spielername"></TextView>

    <EditText

        android:id="@+id/editTxtPlayerTwoName"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:fontFamily="@font/reem_kufi"
        android:textColor="@color/sandbraun"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="135dp"
        android:layout_height="56dp"
        android:background="@color/sandbraun"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Spielen!"
        android:textColor="@color/damebraun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779" />


</androidx.constraintlayout.widget.ConstraintLayout>