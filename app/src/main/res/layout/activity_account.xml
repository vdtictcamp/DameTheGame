<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/damebraun"
    tools:context=".Activities.AccountDelete">


    <TextView
        android:id="@+id/emailAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourAccount"
        android:textColor="@color/sandbraun"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="97dp"></TextView>

    <TextView
        android:id="@+id/lblAccountEmail"
        android:layout_width="254dp"
        android:layout_height="35dp"
        android:text="Hier steht die Emailadresse"
        android:textColor="@color/sandbraun"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="163dp">
    </TextView>

    <Button
        android:layout_width="162dp"
        android:layout_height="48dp"
        android:background="@color/sandbraun"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="220dp"
        android:text="Passwort zurÃ¼cksetzen"
        android:textColor="@color/damebraun"
        android:fontFamily="@font/alfa_slab_one" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="176dp"
        android:layout_height="53dp"
        android:layout_marginBottom="380dp"
        android:background="@color/sandbraun"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/btnDeleteAccount"
        android:textColor="@color/damebraun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/loadBarDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDeleteAccount"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>